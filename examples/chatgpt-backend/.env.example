# 应用配置
APP_NAME="ChatGPT Backend"
APP_VERSION="1.0.0"
ENVIRONMENT="development"  # development, staging, production
DEBUG=true
HOST="0.0.0.0"
PORT=8000
WORKERS=1

# 安全配置
SECRET_KEY="your-super-secret-key-change-this-in-production"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ALLOWED_HOSTS="localhost,127.0.0.1,0.0.0.0"

# 数据库配置
DATABASE_URL="sqlite:///./chatgpt_backend.db"
# PostgreSQL示例: DATABASE_URL="postgresql://user:password@localhost:5432/chatgpt_backend"
# MySQL示例: DATABASE_URL="mysql+pymysql://user:password@localhost:3306/chatgpt_backend"
DATABASE_ECHO=false
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# Redis配置（可选，用于缓存和会话存储）
REDIS_URL="redis://localhost:6379/0"
# Redis集群示例: REDIS_URL="redis://localhost:6379,localhost:6380,localhost:6381/0"

# OpenAI配置
OPENAI_API_KEY="sk-your-openai-api-key-here"
OPENAI_API_BASE="https://api.openai.com/v1"  # 可选，自定义API端点
OPENAI_ORGANIZATION=""  # 可选，OpenAI组织ID

# 日志配置
LOG_LEVEL="INFO"  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT="json"  # json, text
LOG_FILE="logs/app.log"
LOG_REQUESTS=true
LOG_RESPONSES=false
LOG_SLOW_REQUESTS=true

# CORS配置
ENABLE_CORS=true
CORS_ORIGINS="http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000"

# 限流配置
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_HOUR=1000
RATE_LIMIT_REQUESTS_PER_DAY=10000

# 管理员用户（用逗号分隔）
ADMIN_USERS="admin,superuser"

# 邮件配置（可选）
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USERNAME="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
SMTP_USE_TLS=true
EMAIL_FROM="your-email@gmail.com"

# 监控配置
ENABLE_METRICS=true
METRICS_PATH="/metrics"
HEALTH_CHECK_PATH="/health"

# 备份配置
ENABLE_AUTO_BACKUP=false
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30

# 文件上传配置
UPLOAD_DIR="uploads"
MAX_FILE_SIZE=10485760  # 10MB in bytes

# WebSocket配置
WEBSOCKET_HEARTBEAT_INTERVAL=30
WEBSOCKET_MAX_CONNECTIONS=1000

# 开发环境特定配置
# 在生产环境中应该移除或设置为false
DEBUG_SQL=false
DEBUG_CACHE=false
DEBUG_AUTH=false

# 生产环境特定配置
# SSL_KEYFILE="/path/to/keyfile.pem"
# SSL_CERTFILE="/path/to/certfile.pem"
# SENTRY_DSN="https://your-sentry-dsn-here"

# 第三方服务配置（可选）
# STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
# STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key"
# GOOGLE_CLIENT_ID="your-google-client-id"
# GOOGLE_CLIENT_SECRET="your-google-client-secret"