# =============================================================================
# 企业级应用环境配置模板
# =============================================================================
# 复制此文件为 .env 并填入实际值

# =============================================================================
# 应用基础配置
# =============================================================================
APP_NAME="Enterprise Application"
APP_VERSION="1.0.0"
APP_DESCRIPTION="Production-ready enterprise application"
APP_ENVIRONMENT="development"  # development, testing, staging, production
APP_DEBUG="true"
APP_HOST="0.0.0.0"
APP_PORT="8000"
APP_WORKERS="4"
APP_RELOAD="true"
APP_LOG_LEVEL="INFO"  # DEBUG, INFO, WARNING, ERROR, CRITICAL
APP_TIMEZONE="UTC"
APP_LOCALE="en_US"

# =============================================================================
# 安全配置
# =============================================================================
SECRET_KEY="your-super-secret-key-change-this-in-production"
JWT_SECRET_KEY="your-jwt-secret-key-change-this-in-production"
JWT_ALGORITHM="HS256"
JWT_ACCESS_TOKEN_EXPIRE_MINUTES="30"
JWT_REFRESH_TOKEN_EXPIRE_DAYS="7"
API_KEY="your-api-key-for-external-services"
ENCRYPTION_KEY="your-encryption-key-32-chars-long"
SESSION_SECRET="your-session-secret-key"
CSRF_SECRET="your-csrf-secret-key"
PASSWORD_RESET_SECRET="your-password-reset-secret"
EMAIL_VERIFICATION_SECRET="your-email-verification-secret"
TOTP_SECRET="your-totp-secret-key"

# =============================================================================
# 数据库配置
# =============================================================================
# 主数据库
DATABASE_URL="postgresql://username:password@localhost:5432/enterprise_db"
DATABASE_HOST="localhost"
DATABASE_PORT="5432"
DATABASE_NAME="enterprise_db"
DATABASE_USER="username"
DATABASE_PASSWORD="password"
DATABASE_POOL_SIZE="10"
DATABASE_MAX_OVERFLOW="20"
DATABASE_POOL_TIMEOUT="30"
DATABASE_POOL_RECYCLE="3600"
DATABASE_ECHO="false"

# 只读数据库（可选）
READ_DATABASE_URL="postgresql://readonly:password@localhost:5433/enterprise_db"

# 测试数据库
TEST_DATABASE_URL="postgresql://test:test@localhost:5434/test_db"

# =============================================================================
# Redis配置
# =============================================================================
REDIS_URL="redis://localhost:6379/0"
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_DB="0"
REDIS_PASSWORD=""
REDIS_MAX_CONNECTIONS="10"
REDIS_SOCKET_TIMEOUT="5"
REDIS_SOCKET_CONNECT_TIMEOUT="5"
REDIS_HEALTH_CHECK_INTERVAL="30"

# Redis Sentinel配置（高可用）
REDIS_SENTINEL_HOSTS="localhost:26379,localhost:26380,localhost:26381"
REDIS_SENTINEL_SERVICE="mymaster"
REDIS_SENTINEL_PASSWORD=""

# =============================================================================
# 消息队列配置
# =============================================================================
# RabbitMQ
RABBITMQ_URL="amqp://guest:guest@localhost:5672/"
RABBITMQ_HOST="localhost"
RABBITMQ_PORT="5672"
RABBITMQ_USER="guest"
RABBITMQ_PASSWORD="guest"
RABBITMQ_VHOST="/"
RABBITMQ_MANAGEMENT_URL="http://localhost:15672"
RABBITMQ_ERLANG_COOKIE="your-erlang-cookie"

# Celery配置
CELERY_BROKER_URL="redis://localhost:6379/1"
CELERY_RESULT_BACKEND="redis://localhost:6379/2"
CELERY_TASK_SERIALIZER="json"
CELERY_RESULT_SERIALIZER="json"
CELERY_ACCEPT_CONTENT="json"
CELERY_TIMEZONE="UTC"
CELERY_ENABLE_UTC="true"
CELERY_TASK_ROUTES="{}"
CELERY_BEAT_SCHEDULE="{}"

# =============================================================================
# 邮件配置
# =============================================================================
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
SMTP_TLS="true"
SMTP_SSL="false"
SMTP_FROM_EMAIL="noreply@yourcompany.com"
SMTP_FROM_NAME="Your Company"

# =============================================================================
# 文件存储配置
# =============================================================================
# 本地存储
UPLOAD_DIR="./uploads"
STATIC_DIR="./static"
MAX_UPLOAD_SIZE="10485760"  # 10MB
ALLOWED_EXTENSIONS="jpg,jpeg,png,gif,pdf,doc,docx,xls,xlsx,txt"

# AWS S3
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="your-s3-bucket"
AWS_S3_ENDPOINT_URL=""  # 留空使用默认AWS端点

# MinIO（S3兼容）
MINIO_ENDPOINT="localhost:9000"
MINIO_ACCESS_KEY="minioadmin"
MINIO_SECRET_KEY="minioadmin"
MINIO_BUCKET="enterprise-bucket"
MINIO_SECURE="false"

# =============================================================================
# 缓存配置
# =============================================================================
CACHE_TYPE="redis"  # redis, memory, dummy
CACHE_DEFAULT_TIMEOUT="300"
CACHE_KEY_PREFIX="enterprise:"
CACHE_VERSION="1"

# =============================================================================
# 搜索引擎配置
# =============================================================================
# Elasticsearch
ELASTICSEARCH_URL="http://localhost:9200"
ELASTICSEARCH_INDEX="enterprise"
ELASTICSEARCH_USERNAME=""
ELASTICSEARCH_PASSWORD=""
ELASTICSEARCH_TIMEOUT="30"
ELASTICSEARCH_MAX_RETRIES="3"

# =============================================================================
# 监控和可观测性
# =============================================================================
# Sentry错误追踪
SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"
SENTRY_ENVIRONMENT="development"
SENTRY_TRACES_SAMPLE_RATE="0.1"

# Jaeger分布式追踪
JAEGER_AGENT_HOST="localhost"
JAEGER_AGENT_PORT="6831"
JAEGER_COLLECTOR_ENDPOINT="http://localhost:14268/api/traces"
JAEGER_SERVICE_NAME="enterprise-app"
JAEGER_SAMPLER_TYPE="const"
JAEGER_SAMPLER_PARAM="1"

# Prometheus指标
PROMETHEUS_PUSHGATEWAY_URL="http://localhost:9091"
PROMETHEUS_JOB_NAME="enterprise-app"
PROMETHEUS_INSTANCE="localhost:8000"

# DataDog
DATADOG_API_KEY="your-datadog-api-key"
DATADOG_APP_KEY="your-datadog-app-key"
DATADOG_SITE="datadoghq.com"

# New Relic
NEW_RELIC_LICENSE_KEY="your-new-relic-license-key"
NEW_RELIC_APP_NAME="Enterprise Application"

# =============================================================================
# 第三方服务配置
# =============================================================================
# Google Cloud
GOOGLE_CLOUD_PROJECT="your-gcp-project-id"
GOOGLE_APPLICATION_CREDENTIALS="/path/to/service-account.json"

# Azure
AZURE_SUBSCRIPTION_ID="your-azure-subscription-id"
AZURE_CLIENT_ID="your-azure-client-id"
AZURE_CLIENT_SECRET="your-azure-client-secret"
AZURE_TENANT_ID="your-azure-tenant-id"

# GitHub
GITHUB_TOKEN="your-github-token"
GITHUB_WEBHOOK_SECRET="your-github-webhook-secret"

# GitLab
GITLAB_TOKEN="your-gitlab-token"
GITLAB_WEBHOOK_SECRET="your-gitlab-webhook-secret"

# Docker Registry
DOCKER_REGISTRY_URL="ghcr.io"
DOCKER_REGISTRY_USERNAME="your-username"
DOCKER_REGISTRY_PASSWORD="your-password"

# =============================================================================
# OAuth和社交登录
# =============================================================================
# Google OAuth
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_REDIRECT_URI="http://localhost:8000/auth/google/callback"

# Facebook OAuth
FACEBOOK_CLIENT_ID="your-facebook-client-id"
FACEBOOK_CLIENT_SECRET="your-facebook-client-secret"
FACEBOOK_REDIRECT_URI="http://localhost:8000/auth/facebook/callback"

# GitHub OAuth
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"
GITHUB_REDIRECT_URI="http://localhost:8000/auth/github/callback"

# Microsoft OAuth
MICROSOFT_CLIENT_ID="your-microsoft-client-id"
MICROSOFT_CLIENT_SECRET="your-microsoft-client-secret"
MICROSOFT_REDIRECT_URI="http://localhost:8000/auth/microsoft/callback"

# LinkedIn OAuth
LINKEDIN_CLIENT_ID="your-linkedin-client-id"
LINKEDIN_CLIENT_SECRET="your-linkedin-client-secret"
LINKEDIN_REDIRECT_URI="http://localhost:8000/auth/linkedin/callback"

# =============================================================================
# LDAP和企业认证
# =============================================================================
LDAP_SERVER_URL="ldap://localhost:389"
LDAP_BIND_DN="cn=admin,dc=company,dc=com"
LDAP_BIND_PASSWORD="admin-password"
LDAP_USER_SEARCH_BASE="ou=users,dc=company,dc=com"
LDAP_GROUP_SEARCH_BASE="ou=groups,dc=company,dc=com"
LDAP_USER_OBJECT_CLASS="inetOrgPerson"
LDAP_GROUP_OBJECT_CLASS="groupOfNames"

# SAML
SAML_ENTITY_ID="http://localhost:8000/saml/metadata"
SAML_SSO_URL="http://localhost:8000/saml/sso"
SAML_SLO_URL="http://localhost:8000/saml/slo"
SAML_X509_CERT="your-saml-certificate"
SAML_PRIVATE_KEY="your-saml-private-key"

# =============================================================================
# 支付和计费
# =============================================================================
# Stripe
STRIPE_PUBLISHABLE_KEY="pk_test_your-stripe-publishable-key"
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key"
STRIPE_WEBHOOK_SECRET="whsec_your-stripe-webhook-secret"

# PayPal
PAYPAL_CLIENT_ID="your-paypal-client-id"
PAYPAL_CLIENT_SECRET="your-paypal-client-secret"
PAYPAL_MODE="sandbox"  # sandbox or live

# 支付宝
ALIPAY_APP_ID="your-alipay-app-id"
ALIPAY_PRIVATE_KEY="your-alipay-private-key"
ALIPAY_PUBLIC_KEY="your-alipay-public-key"
ALIPAY_GATEWAY="https://openapi.alipaydev.com/gateway.do"  # 沙箱环境

# =============================================================================
# 通知服务
# =============================================================================
# Slack
SLACK_WEBHOOK_URL="https://hooks.slack.com/services/your/slack/webhook"
SLACK_BOT_TOKEN="xoxb-your-slack-bot-token"
SLACK_CHANNEL="#general"

# Discord
DISCORD_WEBHOOK_URL="https://discord.com/api/webhooks/your/discord/webhook"
DISCORD_BOT_TOKEN="your-discord-bot-token"

# Microsoft Teams
TEAMS_WEBHOOK_URL="https://outlook.office.com/webhook/your/teams/webhook"

# Telegram
TELEGRAM_BOT_TOKEN="your-telegram-bot-token"
TELEGRAM_CHAT_ID="your-telegram-chat-id"

# =============================================================================
# 限流和安全
# =============================================================================
RATE_LIMIT_ENABLED="true"
RATE_LIMIT_PER_MINUTE="60"
RATE_LIMIT_PER_HOUR="1000"
RATE_LIMIT_PER_DAY="10000"
RATE_LIMIT_STORAGE="redis"

# CORS配置
CORS_ORIGINS="http://localhost:3000,http://localhost:8080"
CORS_ALLOW_CREDENTIALS="true"
CORS_ALLOW_METHODS="GET,POST,PUT,DELETE,OPTIONS"
CORS_ALLOW_HEADERS="*"

# 安全头
SECURITY_HEADERS_ENABLED="true"
HSTS_MAX_AGE="31536000"
CSP_POLICY="default-src 'self'"

# =============================================================================
# 功能开关
# =============================================================================
FEATURE_REGISTRATION_ENABLED="true"
FEATURE_EMAIL_VERIFICATION_REQUIRED="true"
FEATURE_TWO_FACTOR_AUTH_ENABLED="false"
FEATURE_SOCIAL_LOGIN_ENABLED="true"
FEATURE_LDAP_AUTH_ENABLED="false"
FEATURE_SAML_AUTH_ENABLED="false"
FEATURE_API_DOCUMENTATION_ENABLED="true"
FEATURE_METRICS_ENABLED="true"
FEATURE_TRACING_ENABLED="true"
FEATURE_CACHING_ENABLED="true"
FEATURE_RATE_LIMITING_ENABLED="true"
FEATURE_FILE_UPLOAD_ENABLED="true"
FEATURE_SEARCH_ENABLED="true"
FEATURE_NOTIFICATIONS_ENABLED="true"
FEATURE_PAYMENTS_ENABLED="false"
FEATURE_ANALYTICS_ENABLED="true"
FEATURE_A_B_TESTING_ENABLED="false"
FEATURE_MAINTENANCE_MODE="false"

# =============================================================================
# 性能配置
# =============================================================================
PAGINATION_DEFAULT_SIZE="20"
PAGINATION_MAX_SIZE="100"
QUERY_TIMEOUT="30"
REQUEST_TIMEOUT="60"
UPLOAD_TIMEOUT="300"
CACHE_TIMEOUT="3600"
SESSION_TIMEOUT="1800"

# =============================================================================
# 国际化
# =============================================================================
DEFAULT_LANGUAGE="en"
SUPPORTED_LANGUAGES="en,zh,es,fr,de,ja"
TIMEZONE_DETECTION_ENABLED="true"
LOCALIZATION_ENABLED="true"

# =============================================================================
# 开发工具配置
# =============================================================================
DEBUG_TOOLBAR_ENABLED="false"
PROFILER_ENABLED="false"
SQL_ECHO="false"
TEMPLATE_AUTO_RELOAD="true"
STATIC_AUTO_RELOAD="true"

# =============================================================================
# 测试配置
# =============================================================================
TESTING="false"
TEST_DATABASE_URL="postgresql://test:test@localhost:5434/test_db"
TEST_REDIS_URL="redis://localhost:6379/15"
TEST_EMAIL_BACKEND="console"
TEST_CELERY_ALWAYS_EAGER="true"

# =============================================================================
# 许可证和激活
# =============================================================================
LICENSE_KEY="your-license-key"
ACTIVATION_CODE="your-activation-code"
LICENSE_SERVER_URL="https://license.yourcompany.com"

# =============================================================================
# 备份配置
# =============================================================================
BACKUP_ENABLED="true"
BACKUP_SCHEDULE="0 2 * * *"  # 每天凌晨2点
BACKUP_RETENTION_DAYS="30"
BACKUP_S3_BUCKET="your-backup-bucket"
BACKUP_ENCRYPTION_KEY="your-backup-encryption-key"

# =============================================================================
# 健康检查
# =============================================================================
HEALTH_CHECK_ENABLED="true"
HEALTH_CHECK_ENDPOINT="/health"
HEALTH_CHECK_DATABASE="true"
HEALTH_CHECK_REDIS="true"
HEALTH_CHECK_EXTERNAL_SERVICES="true"

# =============================================================================
# 自定义配置
# =============================================================================
# 在这里添加您的自定义环境变量
CUSTOM_SETTING_1="value1"
CUSTOM_SETTING_2="value2"